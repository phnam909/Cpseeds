{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Name_vi": {
      "type": "string",
      "required": true
    },
    "Description_vi": {
      "type": "richtext"
    },
    "Product_img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "Price": {
      "type": "biginteger"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Name_vi",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "product"
    }
  }
}
